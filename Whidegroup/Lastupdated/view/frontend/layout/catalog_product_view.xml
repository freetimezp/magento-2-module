<?xml version="1.0"?>
<page 
	  layout="1column"
			xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
			xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
			<head>
    <css src="Whidegroup_Lastupdated::css/style.css" />
    <link src="Whidegroup_Lastupdated::js/script.js" />
   </head> 
		 <body>
		    <referenceBlock name="product.info.main">
		        <block 
		         	class="Whidegroup\Lastupdated\Block\Newblock"
		         	name="product.info.newblock"
		         	template="Whidegroup_Lastupdated::newblock.phtml"
		         	before="-">
		        </block>
		    </referenceBlock>
		    <move 
		    	element="product.info.newblock" 
		    	destination="product.info.main" 
		    	after="page.main.title" />
		 </body>
</page>

 